<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
  <div class="col-6 offset-3">
    <h1>login on Wanderlust</h1>
    <form action="/login" method="post" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input
          type="text"
          id="username"
          name="username"
          class="form-control"
          required
        />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">You fr real bruh!?</div>
      </div>

      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          type="password"
          id="password"
          name="password"
          class="form-control"
          required
        />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">You fr real bruh!?</div>
      </div>
      <button class="btn btn-success">Login</button>
    </form>
    <form action="/signup">
      <p class="mt-3">wanna a create an account?</p>
      <button class="btn btn-primary" style="display: block; margin: auto">
        SignUp
      </button>
    </form>
  </div>
</div>
